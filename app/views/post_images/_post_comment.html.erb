      <div class="card-text">
        <h5 class="mt-3"><%= @post_image.post_comments.count %>件のコメント</h5>
        <% @post_image.post_comments.each do |post_comment| %>
          <div class="d-flex border p-3">
            <%= link_to user_path(post_comment.user.id) do %>
              <%= attachment_image_tag post_comment.user, :profile_image, size: "40x40", fallback: "no_image.jpg", class:"rounded-circle"; %>
            <% end %>
            <div class="ml-4 overflow-hidden">
              <%= post_comment.user.name %> ｜ 
              <%= post_comment.created_at.strftime('%Y/%m/%d %H:%M') %>
              <% if post_comment.user == current_user %>
                 ｜ <%= link_to '削除', post_image_post_comment_path(@post_image.id, post_comment.id), method: :delete, 'data-confirm' => 'Are you sure to delete your comment?', class:"text-dark" %><br>
              <% end %>
              <div class="comment mt-3">
                <%= post_comment.comment %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <hr>